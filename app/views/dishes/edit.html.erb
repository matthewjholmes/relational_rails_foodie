<h1>Edit <%= @dish.name %></h1>

<%= form_with url: "/dishes/#{@dish.id}", method: :patch, local: true do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :seasonal, "Seasonal (true/false)" %>
  <%= f.text_field :seasonal %>

  <%= f.label :calories, "Calories" %>
  <%= f.text_field :calories %>

  <%= f.submit 'Update Dish' %>
<% end %>
